<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainbox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vues.Ajout">
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Titre">
               <GridPane.margin>
                  <Insets left="250.0" />
               </GridPane.margin></Label>
            <Label text="Genre" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="240.0" />
               </GridPane.margin></Label>
            <Button mnemonicParsing="false" onAction="#creerFilm" text="Valider" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="titre" GridPane.columnIndex="1" />
            <TextField fx:id="realisateur" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Realisateur" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets left="207.0" />
               </GridPane.margin>
            </Label>
            <ComboBox fx:id="lesGenres" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Button mnemonicParsing="false" onAction="#retourMenu" text="Retour" />
   </children>
</VBox>
